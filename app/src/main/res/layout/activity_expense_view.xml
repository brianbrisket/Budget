<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firstdraft.brian.budget.expense.ExpenseViewActivity">

    <TextView
        android:id="@+id/add_expense_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add Expense"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/expense_input_field"
        style="@style/AppTheme"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_expense_title"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:visibility="visible"
        />


    <TextView
        android:id="@+id/recurrence_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_input_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:text="Recurrence"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Spinner
        android:id="@+id/recurrence_menu"
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/recurrence_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/category_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recurrence_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:text="Categories"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Spinner
        android:id="@+id/category_menu"
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/save_expense_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:visibility="invisible"
        tools:visibility="visible"
        />

</RelativeLayout>
