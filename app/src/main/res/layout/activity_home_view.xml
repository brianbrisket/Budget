<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firstdraft.brian.budget.home.HomeActivity">

    <TextView
        android:id="@+id/home_month_year_top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="February 2017" />

    <TextView
        android:id="@+id/home_current_balance_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_month_year_top_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="$3,135.64"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/home_add_expense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_current_balance_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add Expense" />

    <Button
        android:id="@+id/home_add_income_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_add_expense_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Add Income" />

    <ImageButton
        android:id="@+id/home_reports_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_add_income_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>
