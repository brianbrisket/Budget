<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firstdraft.brian.budget.expense.ExpenseViewActivity">

    <TextView
        android:id="@+id/add_income_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Income"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/income_input_field"
        android:layout_width="@dimen/currency_field_width"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:layout_below="@id/add_income_title"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/recurrence_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/income_input_field"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:text="@string/recurrence_menu_title"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Spinner
        android:id="@+id/recurrence_menu"
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/recurrence_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/category_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recurrence_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:text="@string/category_menu_title"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Spinner
        android:id="@+id/category_menu"
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/save_expense_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/done_button"
        android:visibility="invisible"
        tools:visibility="visible"
        />

</RelativeLayout>